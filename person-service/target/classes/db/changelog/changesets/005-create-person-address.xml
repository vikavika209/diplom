<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="005" author="you">
        <createTable tableName="person_address">
            <column name="person_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="person_address"
                columnNames="person_id, address_id"
                constraintName="pk_person_address"/>

        <addForeignKeyConstraint baseTableName="person_address"
                                 baseColumnNames="person_id"
                                 referencedTableName="persons"
                                 referencedColumnNames="id"
                                 constraintName="fk_person_address_person"/>

        <addForeignKeyConstraint baseTableName="person_address"
                                 baseColumnNames="address_id"
                                 referencedTableName="addresses"
                                 referencedColumnNames="id"
                                 constraintName="fk_person_address_address"/>
    </changeSet>

</databaseChangeLog>