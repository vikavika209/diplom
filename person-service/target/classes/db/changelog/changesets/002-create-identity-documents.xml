<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="002" author="you">
        <createTable tableName="identity_documents">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)"/>
            <column name="number" type="VARCHAR(20)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="persons_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="identity_documents"
                                 baseColumnNames="persons_id"
                                 referencedTableName="persons"
                                 referencedColumnNames="id"
                                 constraintName="fk_identitydocument_person"/>
    </changeSet>

</databaseChangeLog>
