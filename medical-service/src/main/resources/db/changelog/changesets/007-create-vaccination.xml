<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="007-1" author="you">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="vaccination"/>
            </not>
        </preConditions>
        <createTable tableName="vaccination">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="vaccination_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="patient_full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="identity_document" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="vaccine_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="vaccination_point_certificate" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_sent_to_kafka" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="vaccination"
                                 baseColumnNames="vaccine_id"
                                 referencedTableName="vaccine"
                                 referencedColumnNames="id"
                                 constraintName="fk_vaccination_vaccine"/>

        <addForeignKeyConstraint baseTableName="vaccination"
                                 baseColumnNames="vaccination_point_certificate"
                                 referencedTableName="vaccination_point"
                                 referencedColumnNames="certificate_number"
                                 constraintName="fk_vaccination_point"/>
    </changeSet>

</databaseChangeLog>
